<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <!-- Default Display Settings -->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.document.sheet.display</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <width>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.width</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.width.description</description>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>int</eval>
                                <range>
                                    <lower>200</lower>
                                    <upper>2000</upper>
                                </range>
                                <default>800</default>
                            </config>
                        </TCEforms>
                    </width>
                    <height>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.height</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.height.description</description>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>int</eval>
                                <range>
                                    <lower>150</lower>
                                    <upper>1500</upper>
                                </range>
                                <default>600</default>
                            </config>
                        </TCEforms>
                    </height>
                    <backgroundColor>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.backgroundColor</label>
                            <config>
                                <type>input</type>
                                <renderType>colorpicker</renderType>
                                <size>10</size>
                                <default>#ffffff</default>
                            </config>
                        </TCEforms>
                    </backgroundColor>
                </el>
            </ROOT>
        </sDEF>

        <!-- Navigation & Controls -->
        <sNavigation>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.document.sheet.navigation</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <showControls>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.showControls</label>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </showControls>
                    <showPageNumbers>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.showPageNumbers</label>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </showPageNumbers>
                    <enableZoom>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.enableZoom</label>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </enableZoom>
                    <enableFullscreen>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.enableFullscreen</label>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </enableFullscreen>
                    <enableKeyboard>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.enableKeyboard</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.enableKeyboard.description</description>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </enableKeyboard>
                    <enableTouch>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.enableTouch</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.enableTouch.description</description>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </enableTouch>
                </el>
            </ROOT>
        </sNavigation>

        <!-- Advanced Settings -->
        <sAdvanced>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.document.sheet.advanced</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <autoplay>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.autoplay</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.autoplay.description</description>
                            <config>
                                <type>check</type>
                                <renderType>checkboxToggle</renderType>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </autoplay>
                    <autoplayDelay>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.autoplayDelay</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.autoplayDelay.description</description>
                            <displayCond>FIELD:autoplay:=:1</displayCond>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>int</eval>
                                <range>
                                    <lower>1000</lower>
                                    <upper>30000</upper>
                                </range>
                                <default>3000</default>
                            </config>
                        </TCEforms>
                    </autoplayDelay>
                    <animationDuration>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.animationDuration</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.animationDuration.description</description>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>int</eval>
                                <range>
                                    <lower>0</lower>
                                    <upper>2000</upper>
                                </range>
                                <default>500</default>
                            </config>
                        </TCEforms>
                    </animationDuration>
                    <maxZoom>
                        <TCEforms>
                            <label>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.maxZoom</label>
                            <description>LLL:EXT:flipbook_converter/Resources/Private/Language/locallang.xlf:flexform.maxZoom.description</description>
                            <displayCond>FIELD:enableZoom:=:1</displayCond>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <eval>double2</eval>
                                <range>
                                    <lower>1.0</lower>
                                    <upper>10.0</upper>
                                </range>
                                <default>3.0</default>
                            </config>
                        </TCEforms>
                    </maxZoom>
                </el>
            </ROOT>
        </sAdvanced>
    </sheets>
</T3DataStructure>